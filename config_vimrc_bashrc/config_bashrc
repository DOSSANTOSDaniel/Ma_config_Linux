  user_color='\[\033[32m\]'
  symbol=ðŸ§
  brackets_color='\[\033[1;31m\]'
  dir_color='\[\033[1;33m\]'
fi

PS0='\n'
PS1='\n'\
${brackets_color}'â”Œâ”€â”€['\
${user_color}'\u'\
